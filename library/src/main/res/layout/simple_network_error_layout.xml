<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simpleErrorLayout"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/networkErrorIv"
            app:srcCompat="@drawable/ic_no_internet"
            android:contentDescription="@string/content_dc"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/networkErrorTitleTv"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/title_no_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/networkErrorDesTv"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="@string/message_no_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/networkErrorRefreshBtn"
            android:paddingHorizontal="60dp"
            android:layout_marginTop="24dp"
            android:text="@string/button_refresh"
            app:backgroundTint="@null"
            android:gravity="center"
            android:textAllCaps="false"
            app:iconGravity="textStart"
            android:textColor="@color/white"
            android:background="@drawable/bg_orange_border_radius_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>