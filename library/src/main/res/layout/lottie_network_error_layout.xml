<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lottieErrorLayout"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/networkErrorIv"
            app:lottie_loop="true"
            android:layout_width="300dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/networkErrorTitleTv"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/title_no_internet"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/networkErrorDesTv"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="@string/message_no_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/networkErrorRefreshBtn"
            android:layout_marginTop="24dp"
            android:text="@string/button_refresh"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/bg_orange_border_radius_30"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>